    <form method="POST" action="/check">
      <div class="d-flex justify-content-center">
        <div class="input-group input-group-lg repo-input w-50">
          <input type="url" name="repo" class="none rounded-pill custom-search-input position-relative w-100 shadow-lg" placeholder="Enter Repository Link..." aria-label="Repository Url"
